{
  "version": "1",
  "envFile": ".env.mcp",
  "servers": {
    "supabase": {
      "transport": "stdio",
      "command": "node_modules/.bin/mcp-server-supabase",
      "args": [
        "--project-ref", "${SUPABASE_PROJECT_REF}",
        "--access-token", "${SUPABASE_ACCESS_TOKEN}"
      ]
    }
  }
}